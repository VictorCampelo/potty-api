{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "./",
  "compilerOptions": {
    "assets": [
      {
        "include": "public/templates/*.hbs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ]
  }
}
